<style>
  .section-products-block-container .halo-item a{
    width:100%;
    display:block;
  }
  .section-products-block-container .product-heading,
  .section-products-block-container .product-description,
  .section-products-block-container .product-star{
    text-align:center;
   }
  .section-products-block-container .halo-item {
    
    padding-left: var(--grid-gap);
    padding-right: var(--grid-gap);
     margin-bottom: 10px;
  }
  .section-products-block-container .halo-item a{
    padding: 30px 0px;
   
    height:100%;
  }

   .section-products-block-container .halo-item:nth-child(odd) a{
     background-color:#F1F1EC;
   }
   .section-products-block-container .halo-item:nth-child(even) a{
     background-image:url({{section.settings.background_image | img_url:'master'}});
   }
   @media (max-width:920px){
       .section-products-block-container .halo-item{
         width:50% !important;
       }
   }
  .trustshop-collection-rating--item{
    display:flex;
    justify-content:center;
  }
</style>
<div class="container section-products-block-container">
  
  <div class="halo-row column-3 items--full_width" style="--grid-gap: 2.5px;">
    {% for block in section.blocks %}
      <div class="halo-item scroll-trigger">
          <a href="{{ block.settings.product_selected.url  }}" aria-disabled="true" title="Sofas">
            <h2 class="product-heading scroll-trigger animate--slide-in" style="">{{ block.settings.heading }}</h2>
           <h2  class="product-description">{{ block.settings.desc }}</h2>
            <div class="product-star text-yellow-500 my-2">
               <div class="trustshop-collection-rating--item"
                rating-value="{{ block.settings.product_selected.metafields.reviews.rating.value }}" 
                rating-count="{{ block.settings.product_selected.metafields.reviews.rating_count }}" >
                </div>
            </div>
            <div class="product-image">
              <img src="{{ block.settings.avatar | img_url:'master' }}" alt="Green sofa" class="mx-auto my-4" width="300" height="200">
            </div>
            <div class="card-price">
    
                {%- render 'price-new',
                    product: block.settings.product_selected,
                    use_variant: true,
                    price_class: 'price--medium'
                -%}
             
          </div>
          </a>
      </div>
     {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Section product blocks",
    "settings": [
       {
            "type" : "image_picker",
            "id" : "background_image",
            "label" : "Background Image"
        },
      {
            "type" : "color",
            "id" : "background_color",
            "label" : "Background Color"
        }
    ],
     "blocks": [
      {
        "type": "review",
        "name": "t:sections.customer_review.blocks.review.name",
        "settings": [
          {
              "type" : "image_picker",
              "id" : "avatar",
              "label" : "t:sections.customer_review.blocks.review.settings.avatar"
          },
          {
              "type" : "text",
              "id" : "heading",
              "label" : "Heading",
              "default" : "Awesome..."
          },
          {
              "type" : "textarea",
              "id" : "desc",
              "label" : "Desc"
          },
          {
              "type": "product",
              "id": "product_selected",
              "label": "Product Selected"
          }
       ]
      } 
    ],
    "presets": [
        {
            "name": "Section product blocks"
        }
    ]
    
  }
{% endschema %}